# ============================================
# OpenCrabShell - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# --- AI Engine ---
# Your Google Gemini API key (required for AI features)
API_KEY=

# --- VPS / Backend Gateway ---
# The base URL of your backend API (e.g. https://your-vps.example.com)
VITE_API_HOST=

# Gateway handshake token (must match your backend's GATEWAY_TOKEN)
GATEWAY_TOKEN=

# --- Email (Sentinel) ---
# Bot email for outbound communications
SENTINEL_EMAIL=
SENTINEL_APP_PASSWORD=
IMAP_HOST=
SMTP_HOST=

# --- Deployment ---
# Your custom domain for Traefik routing (used in opencrabshell.yml)
DEPLOY_HOST=
